{
  "name": "finbot-v4",
  "version": "4.0.0",
  "description": "FinBot v4 - Advanced Financial Management System with Approval Workflows",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "demo": "node src/app.js",
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc -p tsconfig.json",
    "build:web": "next build",
    "start:api": "node dist/api/index.js",
    "start:web": "next start",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:performance": "k6 run tests/performance/api-load-test.js",
    "test:security": "npm audit && snyk test",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:seed": "ts-node scripts/seed-database.ts",
    "db:reset": "ts-node scripts/reset-database.ts",
    "docker:build": "docker build -t finbot-v4 .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "prepare": "husky install"
  },
  "keywords": [
    "fintech",
    "financial-management",
    "approval-workflows",
    "risk-assessment",
    "fraud-detection",
    "audit-trail",
    "kubernetes",
    "microservices",
    "typescript",
    "react",
    "nextjs"
  ],
  "author": "FinBot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/finbot-v4.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/finbot-v4/issues"
  },
  "homepage": "https://github.com/yourusername/finbot-v4#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@types/pg": "^8.10.7",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "snyk": "^1.1248.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  }
}
